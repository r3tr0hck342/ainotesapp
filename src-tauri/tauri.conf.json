{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "vite",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "productName": "AI Notes",
  "version": "1.0.0",
  "identifier": "com.ainotes.app",
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "AI Notes",
        "width": 1400,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
